{
    "name": "wdio-native-app-compare-service",
    "version": "2.0.1",
    "description": "Visual regression testing for Native iOS and Android apps with WebdriverIO",
    "main": "build/index.js",
    "types": "types/index.d.ts",
    "scripts": {
        "build": "babel lib/ -d build/",
        "release": "release-it --github.release",
        "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
        "release:patch": "npm run release -- patch",
        "release:minor": "npm run release -- minor",
        "release:major": "npm run release -- major",
        "test": "npm run test:lint && npm run test:unit",
        "test:lint": "eslint ./lib",
        "test:unit": "jest --coverage",
        "watch": "npm run build -- --watch",
        "prepare": "husky install"
    },
    "keywords": [
        "webdriver.io",
        "native",
        "screenshots",
        "compare",
        "image",
        "android",
        "ios",
        "appium"
    ],
    "author": "wswebcreation.nl",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.18.6",
        "@babel/core": "^7.18.6",
        "@babel/eslint-parser": "^7.18.9",
        "@babel/node": "^7.18.6",
        "@babel/preset-env": "^7.18.6",
        "@babel/register": "^7.18.6",
        "babel-jest": "^29.2.2",
        "eslint": "^7.3.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.1",
        "jest": "^29.2.2",
        "prettier": "2.7.1",
        "release-it": "^15.1.1"
    },
    "dependencies": {
        "@wdio/logger": "^7.19.0",
        "canvas": "^2.9.3",
        "chalk": "^4.1.0",
        "expect": "^29.2.2",
        "fs-extra": "^10.1.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wswebcreation/wdio-native-app-compare.git"
    },
    "jest": {
        "testMatch": [
            "<rootDir>/tests/**/*.test.js"
        ],
        "coverageDirectory": "./coverage/",
        "coveragePathIgnorePatterns": [
            "<rootDir>/lib/resemble/",
            "<rootDir>/lib/matchers/toMatchAppImageSnapshot.js"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "lib/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 95,
                "functions": 100,
                "lines": 97,
                "statements": 97
            }
        },
        "testEnvironment": "node"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
